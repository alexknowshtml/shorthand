{
  "schedule_meeting": {
    "triggers": ["schedule a meeting", "set up a meeting with", "book a meeting with", "schedule a call with"],
    "command": "/schedule",
    "description": "Schedule a meeting on your preferred calendar"
  },
  "check_email": {
    "triggers": ["check email", "check my email", "inbox", "show inbox", "email overview"],
    "command": "/email-overview",
    "description": "View email inbox summary"
  },
  "meeting_prep": {
    "triggers": ["prep for meeting", "meeting prep", "prep for my call with", "get ready for meeting"],
    "command": "/prep-meeting",
    "description": "Prepare context for an upcoming meeting"
  },
  "add_reminder": {
    "triggers": ["remind me to", "set a reminder", "don't let me forget to"],
    "command": "/remind",
    "description": "Create a reminder"
  },
  "daily_overview": {
    "triggers": ["what's on my plate", "what are my priorities", "what's today look like"],
    "command": "/overview",
    "description": "Show daily priorities and agenda"
  }
}
